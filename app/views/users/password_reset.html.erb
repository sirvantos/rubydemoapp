<% provide(:title, 'Reset password') %>

<h1>Reset password</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_tag(passwordreset_path) do %>

		<%= label_tag :email %>
		<%= email_field_tag :email%>

		<%= submit_tag "Reset password", class: "btn btn-large btn-primary" %>

	<% end %>
	</div>
</div>